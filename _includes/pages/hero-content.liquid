<div class="hero__content hero__content--{{ page_id }}">

    <div class="hero__container hero__container--page hero__container--{{ page_id }}">

        <div class="hero__content-wrapper hero__content-wrapper--{{ page_id }}">

            <h1 class="hero__heading hero__heading--page hero__heading--{{ page_id }}">
                {{ hero.heading }}
            </h1>

            {%- if hero.text and hero.text.size > 0 -%}
                <div class="hero__text hero__text--page hero__text--{{ page_id }}">
                  {{ hero.text | markdownify }}
                </div>
            {%- endif -%}

            {%- if hero.tiles -%}

                <div class="{{ page_id }}__hero-tiles-wrapper">

                    <div class="{{ page_id }}__hero-tiles">
                        {%- for img in hero.tiles.images -%}
                            <div class="{{ page_id }}__hero-tile">
                                <a id="goto-{{- img.target -}}" class="goto" href="#{{- img.target -}}">
                                    <img src="{{ img.path }}" alt="{{- img.alt_text -}}" class="resources__hero-tile-img">
                                </a>
                            </div>
                        {%- endfor -%}
                    </div>

                    <div class="{{ page_id }}__hero-tiles {{ page_id }}__hero-tiles--mobile slick-me-center">
                        {%- for img in hero.tiles.images -%}
                            <div class="{{ page_id }}__hero-tile">
                                <a id="goto-{{- img.target -}}--mobile" class="goto" href="#{{- img.target -}}">
                                    <img src="{{ img.path }}" alt="{{- img.alt_text -}}" class="resources__hero-tile-img">
                                </a>
                            </div>
                        {%- endfor -%}
                    </div>

                </div>

            {%- endif -%}

            {%- if hero.cta.url and hero.cta.url.size > 0 -%}
                <div class="hero__cta hero__cta--{{ page_id }}">
                    <a href="{{- hero.cta.url -}}" class="hero__cta-btn hero__cta-btn--page hero__cta-btn--{{ page_id }} btn"{% if hero.cta.new_tab == true %} target="_blank"{% endif %}>
                        {{- hero.cta.text -}}
                    </a>
                </div>
            {%- endif -%}


        </div>

    </div>

</div>
